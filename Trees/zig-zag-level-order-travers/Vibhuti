The function zigZagTraversal() takes the root node of the Binary Tree as its input and returns a list containing the node values as they appear in the 
Zig-Zag Level-Order Traversal of the Tree.


vector <int> zigZagTraversal(Node* root)
{
   vector<int>v;
   queue<Node*>q;
   if(!root)return v;
   q.push(root);
   int level=0;
   while(!q.empty())
   {
       int n=q.size();
       vector<int>k;
       while(n--)
       {
           Node *t=q.front();
           q.pop();
           k.push_back(t->data);
           if(t->left)
           q.push(t->left);
           if(t->right)
           q.push(t->right);
       }
       if(level%2!=0)
       reverse(k.begin(),k.end());
       for(int i=0;i<k.size();i++)
       {
           v.push_back(k[i]);
       }
       level++;
   }
   return v;
}
